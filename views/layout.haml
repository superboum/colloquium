!!!
%html{:lang => "fr", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title Colloquium
    %link{:href => "/css/bootstrap.min.css",  :rel => "stylesheet", :type => "text/css"}
    %link{:href => "/css/main.css",  :rel => "stylesheet", :type => "text/css"}
    %meta{:name => "viewport",  :content => "width=device-width, initial-scale=1"} 
     
  %body
    %nav.navbar.navbar-default{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => "#main-menu", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar

          %a.navbar-brand{:href => "/"}
            %img.pull-left{:alt => "Colloquium", :src => "/img/logo.png", :height => "20"}
            .pull-left.text 
              Colloquium

        #main-menu.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.active
              %a{:href => "/"} Home
            %li
              %a{:href => "/laurent"} Laurent
            %li
              %a{:href => "/jean"} Jean
               

    = yield

    .container
      %footer{:class => "row"}
        %div{:class => "col-lg-12"}
          %hr
          %p
            %small 
              Colloquium. Developped by 
              %a{:href => ""} Laurent
              ,
              %a{:href => ""} Jean
              ,
              %a{:href => ""} Thomas
              and
              %a{:href => "http://quentin.dufour.tk"} Quentin
      
    %script(src="/js/jquery.min.js")
    %script(src="/js/bootstrap.min.js")
