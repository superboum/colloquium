%form.form-horizontal#Update{:method => "POST"}
  .panel.panel-default
    .panel-body
      %fieldset
        %legend Identity
        .form-group
          %label.col-md-2.control-label{:for => "firstName"} First name *
          .col-md-4
            %input.form-control{:type => "text", :id => "firstName", :name => "firstName", :placeholder => "John"}

          %label.col-md-2.control-label{:for => "lastName"} Last name *
          .col-md-4
            %input.form-control{:type => "text", :id => "lastName", :name => "lastName", :placeholder => "Doe"}

        .form-group
          %label.col-md-2.control-label{:for => "title"} Title
          .col-md-4
            %input.form-control{:type => "text", :id => "title", :name => "title", :placeholder => "Doctor, Professor..."}
          
        .form-group 
          %label.col-md-2.control-label{:for => "gender"} Gender
          .col-md-4
            %select#gender.form-control{:name => "gender"}
              %option{:value => "0"} Male
              %option{:value => "1"} Female
              %option{:value => "2"} Other

          %label.col-md-2.control-label{:for => "Nationality"} Nationality
          .col-md-4
            %select#Nationality.form-control{:name => "nationality"}
              %option{:value => "france"} France
              %option{:value => "Deutschland"} Deutschland

      %fieldset
        %legend Contact
        .form-group
          %label.col-md-2.control-label{:for => "phone"} Phone Number *
          .col-md-4
            %input.form-control{:type => "text", :id => "phone", :name => "phone", :placeholder => "+33617570950"}

          %label.col-md-2.control-label{:for => "address"} Postal Address *
          .col-md-4
            %input.form-control{:type => "text", :id => "address", :name => "address", :placeholder => "20 Avenue des Buttes des CoÃ«smes, 35700 Rennes"}
      
      %fieldset
        %legend Extra information
        .form-group
          %label.col-md-2.control-label{:for => "diet"} Diet *
          .col-md-6
            %label.radio-inline
              %input#inlineRadio1{:name => "dietRadioOptions", :type => "radio", :value => "0"}
                No constraint
            %label.radio-inline
              %input#inlineRadio2{:name => "dietRadioOptions", :type => "radio", :value => "1"}
                Vegan
            %label.radio-inline
              %input#inlineRadio3{:name => "dietRadioOptions", :type => "radio", :value => "2"}
                Without pork

  .row
    .col-md-6.col-md-offset-6
      %input.btn.btn-primary.btn-lg.btn-block{:type => "submit", :value => "Next"}


