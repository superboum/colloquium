%h1 Settings 
.container
  .row
    .col-md-6
      %form#Sign_in{:method => "POST"}
        
        %fieldset
          %legend Website
          .form-group
            %label{:for => "base_url"} Base URL
            %input.form-control{:placeholder => "Enter base_url", :type => "text", :title => "base_url", :name => "base_url", :value => store['parameters']['base_url']}
          
          .form-group
            %label{:for => "title"} Title
            %input.form-control{:placeholder => "Enter title", :type => "text", :title => "title", :name => "title", :value => store['parameters']['title']}
          
          .form-group
            %label{:for => "slogan"} Slogan
            %input.form-control{:placeholder => "Enter slogan", :type => "text", :title => "slogan", :name => "slogan", :value => store['parameters']['slogan']}
            
          .form-group
            %label{:for => "cover"} Cover
            %input.form-control{:placeholder => "Choose cover", :type => "text", :title => "cover", :name => "cover", :value => store['parameters']['cover']}
        %fiedset
          %legend
            .form-group
              %label{:for => "meal_begin"} First day
              %input.form-control{:placeholder => "Enter the day of the first meal", :type => "date", :title => "first_day", :name => "first_day", :value => store['meal']['first_day']}
            .form-group
              %label{:for => "meal"} First meal  
              %select.form-control{ :title => "first_meal", :name => "first_meal", :value => store['meal']['first_meal']}
                %option{value: "8h00"} Breakfast
                %option{value: "12h00"} Lunch
                %option{value: "19h00"} Dinner
            .form-group
              %label{:for => "meal_begin"} Last day
              %input.form-control{:placeholder => "Enter the day of the last meal", :type => "date", :title => "last_day", :name => "last_day", :value => store['meal']['last_day']}
            .form-group
              %label{:for => "meal"} Last meal  
              %select.form-control{ :title => "last_meal", :name => "last_meal"}
                %option{value: "8h00"} Breakfast
                %option{value: "12h00"} Lunch
                %option{value: "19h00"} Dinner
                  
        %fieldset
          %legend Payment by bank transfer
          
          .form-group
            %table
              %tr
                %th Code banque
                %th Code guichet
                %th Num. compte
                %th ClÃ© RIB
                %th Domiciliation
              %tr
                %td
                  %input.form-control{:placeholder => "12345", :type => "text", :title => "rib", :name => "code_banque", :value =>  store['payment']['rib']['code_banque']}
                %td
                  %input.form-control{:placeholder => "12345", :type => "text", :title => "rib", :name => "code_guichet", :value =>  store['payment']['rib']['code_guichet']}
                %td
                  %input.form-control{:placeholder => "12345679891A", :type => "text", :title => "rib", :name => "numero_compte", :value =>  store['payment']['rib']['numero_compte']}
                %td
                  %input.form-control{:placeholder => "12", :type => "text", :title => "cle_rib", :name => "cle_rib", :value =>  store['payment']['rib']['cle_rib']}
                %td
                  %input.form-control{:placeholder => "Banque-ville-agence", :type => "text", :title => "rib", :name => "domiciliation", :value =>  store['payment']['rib']['domiciliation']}
                  
          .form-group
            %label{:for => "iban"} IBAN
            %input.form-control{:placeholder => "FR00 0000 0000 0000 0000 0000 00", :type => "text", :title => "iban", :name => "iban", :value => store['payment']['rib']['iban']}
          
          .form-group
            %label{:for => "bic"} BIC
            %input.form-control{:placeholder => "ABCDEFGH", :type => "text", :title => "bic", :name => "bic", :value => store['payment']['rib']['bic']}
        
        %fieldset
          %legend Payment by cheque
          .form-group
            %label{:for => "order"} Order
            %input.form-control{:placeholder => "Alan Smithee", :type => "text", :title => "order", :name => "order", :value => store['payment']['cheque']['order']}
          .form-group
            %label{:for => "address"} Address
            %textarea.form-control{:name => 'address'}= store['payment']['cheque']['address']


        
        .form-group
          %input.btn.btn-primary{:type => "submit", :value => "Save"}
