- if edit
  %h2 Edit event "#{event.title}"
-else
  %h2 Create a new event

%form{:method => "POST"}
  .form-group
    %label{:for => "title"} Title
    %input{:type => "text", :class => "form-control", :id => "title", :placeholder => "Conference...", :name => "title", :value => event.title}
  
  
  .form-group
    %label{:for => "short_text"} Summary (max 255 chars)
    %textarea{:class => "form-control", :id => "short_text", :placeholder => "A quick summary of you event", :name => "short_text"}
      = event.short_text
     

  .form-group
    %label{:for => "begin"} Begin of your event 
    %textarea{:type => "datetime-local",:class => "form-control", :id => "begin", :name => "begin"}
      = event.begin
      
  .form-group
    %label{:for => "end"} End of your event 
    %textarea{:type => "datetime-local",:class => "form-control", :id => "end", :name => "end"}
      = event.end
      


  .form-group
    %input.pull-right.btn.btn-lg.btn-primary{:type => "submit", :value => "Publish"}
