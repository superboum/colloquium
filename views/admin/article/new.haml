%h2 Create a new article

%form{:method => "POST"}
  .form-group
    %label{:for => "title"} Title
    %input{:type => "text", :class => "form-control", :id => "title", :placeholder => "A great journey...", :name => "title"}

  .form-group
    %label{:for => "category"} Category
    %input{:type => "text", :class => "form-control", :id => "category", :placeholder => "Tips, Math, Activity...", :name => "category"}

  .form-group
    %label{:for => "short_text"} Summary (max 255 chars)
    %textarea{:class => "form-control", :id => "short_text", :placeholder => "A quick summary of you article", :name => "short_text"}
      
  .form-group
    %label{:for => "long_text"} Body (Markdown Syntax is allowed)
    %textarea{:rows => "15", :class => "form-control", :id => "long_text", :placeholder => "You article content.", :name => "long_text"}

  .form-group
    %input.pull-right.btn.btn-lg.btn-primary{:type => "submit", :value => "Publish"}
